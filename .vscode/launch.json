    // * luk: add nodemon to node debug, restart, runtimeExecutable, integratedTerminal(this looking for global intalled nodemon to use)
    // * luk: you can manipulate the debug value as well.
    // luk: https://code.visualstudio.com/docs/nodejs/nodejs-debugging to learn more about launch.json

    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "console": "integratedTerminal"
        }
    ]
}