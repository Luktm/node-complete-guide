<%-include('../includes/head.ejs')%>

<body>
    <%-include('../includes/navigation.ejs') %>
    <main>
        <section>
            <!-- like normal javascript -->
            <% if(prods.length> 0) { %>
                <div class="grid">
                    <% for(let product of prods) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title"><%= product.title %></h1>
                            </header>
                            <div class="card__image">
                                <img src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png"
                                    alt="A Book">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$<%= product.price %></h2>
                                <p class="product__description"><%= product.description %></p>
                            </div>
                            <div class="card__actions">
                                <!-- like laravel edit(id) method for edit route -->
                                <a href="/admin/edit-product<%= product.id %>?edit=true" class="btn">Edit</a href=>
                                <!-- bcuz i want post method -->
                                <!-- req.body.productId in admin route -->
                                <input type="hidden" value="<%= product.id %>" name="productId">
                                <form action="/admin/delete-product" method="POST">
                                    <button class="btn">Delete</button>
                                </form>
                            </div>
                        </article>
                    <% } %>
                </div>
                
            <% } else { %>
                <h1>No product found</h1>
            <% } %>
        </section>
    </main>
<%-include('../includes/end.ejs')%>