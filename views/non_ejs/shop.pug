//- similar to @extend('layout.app') in laravel
extends layouts/main-layout.pug

//- after install template engine, npm install --save ejs pug express-handlebars
//- write app.set('view engine', 'pug') and,
//-  app.set('views', 'views') in app.js as a default engine, 
//- then usen res.render() method

//- from shop.js
block styles 
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")

//- similar to @section('content') in laravel
block content
    main
        if prods.length > 0
            .grid
                //- prods from shop.js
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src='https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png' alt='A Book')
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more interesting things!
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No product